{:source-paths #{"src" "test"}
 :dependency-scheme "jar"
 :ignore-paths #{"target"
                 ".lsp"
                 ".lsp/.cache"
                 ".lsp/.cache/.stubs"
                 ".cpcache"
                 ".git"
                 "node_modules"
                 "out"}
 :format {:provider "cljfmt"
          :cljfmt {:indentation? true
                   :remove-surrounding-whitespace? true}}
 :linters {:clj-kondo {:level :warning}}
 :lint-project-files-after-startup? true
 :lint-project-files-on-startup? false
 :completion {:snippets? true
              :add-used-ns-to-new-require? true}
 :documentation {:enabled true}
 :hover {:enabled true}
 :show-docs-arity-on-same-line? true
 :project-specs [{:project-path "project.clj"
                  :classpath-cmd ["lein" "classpath"]}]
 
 ;; Archstone/Catalyst custom macros for code actions
 :additional-snippets [{:name "Extract to |fn"
                        :detail "Extract selection to catalyst |fn"
                        :snippet "(|fn [$1] $0)"}
                       {:name "Extract to |defn"
                        :detail "Extract selection to catalyst |defn"
                        :snippet "(|defn $1 [$2] $0)"}
                       {:name "Introduce |let"
                        :detail "Introduce catalyst |let binding"
                        :snippet "(|let [$1 $2] $0)"}
                       {:name "|fn"
                        :detail "Catalyst anonymous function"
                        :snippet "(|fn [$1] $0)"}
                       {:name "|let"
                        :detail "Catalyst let binding"
                        :snippet "(|let [$1 $2] $0)"}
                       {:name "|defn"
                        :detail "Catalyst function definition"
                        :snippet "(|defn $1 [$2] $0)"}
                       {:name "|if"
                        :detail "Catalyst if expression"
                        :snippet "(|if $1 $2 $3)"}
                       {:name "|cond"
                        :detail "Catalyst cond expression"
                        :snippet "(|cond $1 $2 :else $0)"}]}
