  client.focused          #0099ff #556064 #80FFF9 #0099ff  #0099ff
  client.focused_inactive #2F3D44 #2F3D44 #1ABC9C #454948  #2F3D44
  client.unfocused        #2F3D44 #2F3D44 #1ABC9C #454948  #2F3D44
  client.urgent           #ff0000 #FDF6E3 #1ABC9C #ff0000  #ff0000
  client.placeholder      #000000 #0c0c0c #ffffff #000000  #000000

  client.background       #2B2C2B
gaps inner 10
gaps outer 0
smart_gaps off
smart_borders on

exec_always --no-startup-id setxkbmap us -variant alt-intl
